l_element.path = f.name;						level_element.setGraphicContent(loaded_swf);						stage.addChild(level_element);						manager.addGraphicElement(level_element);					});				});			});		}				// overrides		/**		 * todo: auslagern in viewmanager		 */		override public function setChildIndex (child:DisplayObject, index:int) : void {			super.setChildIndex(child, index);		}			}//end-class}//end-pack