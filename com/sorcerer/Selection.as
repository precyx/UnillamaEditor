package com.sorcerer  {	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.display.DisplayObject;	import flash.display.LineScaleMode;	import flash.display.CapsStyle;	import flash.display.Loader;	import flash.display.LoaderInfo;	import flash.geom.Point;	import flash.geom.Rectangle;	import flash.net.URLRequest;	import flash.events.Event;		public class Selection extends Sprite{		//		// data		public var startClickPoint:Point;		//		// graphics		public var preSelection:Sprite;		public var elementSelection:Sprite;		//		//		/**		 * Ein Selection Objekt, welches eine 'preSelection' und 'elementSelection' besitzt.		 * Dadurch kann man Auswahlen visualisieren.		 */		public function Selection(stage:flash.display.Stage) {			preSelection = new Sprite();			stage.addChild(preSelection);			elementSelection = new Sprite();			stage.addChild(elementSelection);		}		/**		 * Zeichnet ein Vorauswahl		 */		public function drawPreSelection(x:Number, y:Number, width:Number, height:Number):void {			preSelection.x = x;			preSelection.y = y;			preSelection.graphics.clear();			preSelection.graphics.lineStyle(1, 0x1DA0E7);			preSelection.graphics.beginFill(0x1DA0E7, 0.1);			preSelection.graphics.drawRect(0, 0, width, height);		}		public function clearPreSelection():void {			preSelection.graphics.clear();		}		public function getPreSelection():Rectangle {			return new Rectangle(preSelection.x, preSelection.y, preSelection.width, preSelection.height);		}		/**		 * Zeichnet eine Element-Auswahl		 */		public function drawElementSelection(x:Number, y:Number, width:Number, height:Number):void {			elementSelection.x = x;			elementSelection.y = y;			elementSelection.graphics.clear();			elementSelection.graphics.lineStyle(2, 0xFE05D9);			elementSelection.graphics.drawRect(0, 0, width, height);		}		public function clearElementSelection():void {			elementSelection.graphics.clear();		}			}	}