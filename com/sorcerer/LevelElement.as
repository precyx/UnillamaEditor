package com.sorcerer  {	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.display.DisplayObject;	import flash.display.LineScaleMode;	import flash.display.CapsStyle;	import flash.display.Loader;	import flash.display.LoaderInfo;	import flash.filters.BlurFilter;	import flash.filters.DropShadowFilter;	import flash.filters.GlowFilter;	import flash.display.BlendMode;	import flash.geom.ColorTransform;	import flash.geom.Point;	import flash.net.URLRequest;	import flash.events.Event;		public class LevelElement extends Sprite{		//		// data		private var type:String;		public var path:String;		public var startDragMousePoint:Point;		public var startDragElementPoint:Point;		//		// graphics		private var overlay:Sprite;		private var graphic_content:DisplayObject;		//		// flags		private var _active:Boolean;		//		// manager		private var manager:LevelElementManager;		//		public function LevelElement(manager:LevelElementManager) {			this.manager = manager;			overlay = new Sprite();		}				/**		* Setzt eine Grafik fest.		*/		public function setGraphicContent(graphic:DisplayObject):void {			this.graphic_content = graphic;			addChild(graphic);		}		/**		* Gibt die festgelegte Grafik zurück.		*/		public function getGraphicContent():DisplayObject{			return graphic_content;		}				/**		*/		public function set active(val:Boolean):void {			if (val)  { this.alpha = 1; this.transform.colorTransform = new ColorTransform(1.1,1.1,1.1); }			else { this.alpha = 1; this.transform.colorTransform = new ColorTransform();  }			_active = val;		}		/**		*/		public function get active():Boolean{			return _active;		}				/**		 * Klont ein Element übergibt es gerade dem Manager.		 */		public function clone():void{			var l:Loader = new Loader();			l.load( new URLRequest("swf/"+this.path) );			var me:LevelElement = this;			l.contentLoaderInfo.addEventListener(Event.COMPLETE, function fileLoaded(e:Event){				var loaded_swf:DisplayObject = LoaderInfo(e.target).content;				var level_element:LevelElement = new LevelElement(manager);				level_element.path = path;				level_element.setGraphicContent(loaded_swf);				stage.addChild(level_element);				level_element.x = me.x +30;				level_element.y = me.y;				level_element.active = true;				// entfernt me im activeArray				manager.activeArray.splice( manager.activeArray.indexOf(me), 1);				manager.activeArray.push(level_element);				manager.addGraphicElement(level_element);			});		}			}	}